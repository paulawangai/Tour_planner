<Window
    x:Class="Tour_planner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Tour_planner.TourPlanner.UI.TourPlanner.Views"
    Title="Tour Planner" Height="1023" Width="1213">
    <Grid>
        <TabControl>
            <TabItem Header="Tours">
                <local:TourView x:Name="TourView" />
            </TabItem>
            <TabItem Header="Tour Logs">
                <local:TourLogView x:Name="TourLogView" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
